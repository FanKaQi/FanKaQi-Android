<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- 自定义 -->
    <style name="text_1">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_2">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_3">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_4">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_5">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_ty">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_6">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_7">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_8">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_9">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_10">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="text_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="text_area">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="fit_windows">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@color/colorTheme</item>
    </style>

    <style name="view_line_height">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="view_line_width">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <!--tabLayout 样式-->
    <style name="customTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorTheme</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/colorTheme</item>
        <item name="tabBackground">@color/gray</item>
        <item name="tabIndicatorHeight">4dp</item>
    </style>

</resources>
